@model AddMovie

<h1>Add a Movie</h1>

<form method="post">
    <label asp-for="MovieTitle">Movie Title:</label>
    <br/>
    <input asp-for="MovieTitle"/>
    <br/>
    <label asp-for="Category">Category:</label>
    <br/>
    <input asp-for="Category"/>
    <br/>
    <label asp-for="Year">Year:</label>
    <br/>
    <input asp-for="Year"/>
    <br/>
    <label asp-for="Director">Director:</label>
    <br/>
    <input asp-for="Director"/>
    <br/>
    <label asp-for="Rating">Rating:</label>
    <br/>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-MA">TV-MA</option>
    </select>
    <br/>
    <label asp-for="Edited">Edited:</label>
    <br/>
    <input type="radio" name="Edited" value="true" checked="checked"/> Yes
    <br/>
    <input type="radio" name="Edited" value="false" checked="checked"/> No
    <br/>
    <label asp-for="LentTo">Lent To:</label>
    <br/>
    <input asp-for="LentTo"/>
    <br/>
    <label asp-for="Notes">Notes:</label>
    <br/>
    <textarea asp-for="Notes"></textarea>
    <br/>
    <br/>
    
    <button type="submit">Submit</button>
</form>